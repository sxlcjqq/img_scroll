	<head>
		<meta charset="utf-8" />
		<title></title>
		<style>
			#showImgs{
				width:210px;
				height:210px;
				overflow:hidden;
			}
			#marquee{
				height:210px;
				width: 1000000px;
			}
			#marquee img{
				max-height:210px;
				max-width: 210px;
				height: 100%;
				width: 100%;
				display: block;
				float: left;
			}
		</style>
	</head>
	<body>
		<button id="leftdd">左</button>
		<button id="rightdd">右</button>
		<div id="showImgs">
			<div id="marquee">
				<img src="img/AR06.png"/>
				<img src="img/AR06DA.png"/>
				<img src="img/n_wrong.png"/>
			</div>
		</div>
	</body>
	<script src="js/jquery-2.1.1.min.js"></script>
	<script>
	(function(){
        var marquee = document.getElementById('marquee');
        var marginLeft=0;
        var scrollwidth =document.getElementById('showImgs').offsetWidth;
        var firstNode = marquee.children[0].cloneNode(true);
        var _left = $('#leftdd');
        var _right = $('#rightdd');
        marquee.appendChild(firstNode);
        var marqueeWidth = (scrollwidth*3);//3为图片数量
        _left.click(
        	function(){
        		marginLeft -= scrollwidth;
        		marquee.style.marginLeft = marginLeft+'px';
        			console.log(marginLeft)
        			console.log(-marqueeWidth)
        		if(marginLeft == -marqueeWidth){
        			console.log('marginLeft')
        			marginLeft = 0;
        		}
        	}
        )
        _right.click(
        	function(){
        		if(marginLeft==0){
        			marginLeft = -marqueeWidth;
        		}
        		marginLeft += scrollwidth;
        		marquee.style.marginLeft = marginLeft+'px';
        	}
        )
    })();
	</script>
</html>
